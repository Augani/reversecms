{
  "name": "reverselocal",
  "version": "1.0.0",
  "description": "reverse cms for epareto",
  "main": "app.js",
  "scripts": {
    "client": "cd client && npm run start ",
    "server": "nodemon app.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "live": "concurrently --kill-others-on-fail \"npm run start\" \"npm run file-server\"",
    "dev:server": "cd client && npm run build && cd .. && nodemon app.js",
    "start": "node app.js",
    "file-server": "npx http-server sites -p 4001"
  },
  "nodemonConfig": {
    "ignore": [
      "sites/*",
      "tempFiles"
    ]
  },
  "author": "Augustus Otu",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.1.1",
    "axios": "^0.19.2",
    "basic-ftp": "^4.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "empty-folder": "^2.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "express-graphql": "^0.9.0",
    "extract-zip": "^2.0.0",
    "fs-extra": "^9.0.1",
    "ftp": "^0.3.10",
    "ftp-client": "^0.2.2",
    "glob": "^7.1.6",
    "graphql": "^15.0.0",
    "graphql-upload": "^10.0.0",
    "http-proxy-middleware": "^1.0.4",
    "jsftp": "^2.1.3",
    "mongoose": "^5.9.12",
    "ms": "^2.1.2",
    "multer": "^1.4.2",
    "node-static": "^0.7.11",
    "nodemailer": "^6.4.6",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "nodemon": "^2.0.3",
    "promise-ftp": "^1.3.5",
    "unzipper": "^0.10.11"
  }
}
